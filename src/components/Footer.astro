---
import { getEnvVar } from "@utils/env";
import type { CTA } from "src/entities/profile"

interface Props {
    cta: CTA
}
const { cta } = Astro.props
const calendlyUrl = getEnvVar('ASTRO_PUBLIC_CALENDLY_URL');
---
<!-- Footer Section -->
<footer
    class="flex flex-col justify-center items-center max-md:px-5 mt-4 w-full font-bold text-center min-h-[200px] max-md:max-w-full"
>
    <p class="text-base text-gray-700 max-md:max-w-full">
        {cta.message}
    </p>
    <a
        class="gap-2.5 px-3 py-2.5 mt-10 w-[236px] text-base leading-relaxed text-white bg-[#6C3CE9] hover:bg-[#5B32C7] rounded-md min-h-11 max-sm:self-center transition-colors"
        href={calendlyUrl}
        target="_blank"
        data-track="click"
        data-track-value="CTA_footer"
    >
        {cta.button}
    </a>
</footer>
