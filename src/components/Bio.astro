---
import { getContent } from '@utils/getContent';
import { type Language } from '@utils/language';

const { lang } = Astro.params;
const i18n = await getContent(lang as Language)
---
<!-- Bio Section -->
<article
    class="px-16 py-8 w-full bg-white rounded-3xl max-sm:border-none border border-solid border-gray-950 border-opacity-10 min-h-[396px] max-md:px-5 max-md:max-w-full"
>
    <h2 class="text-3xl font-bold leading-tight text-gray-900">{i18n.bio.title}</h2>
    <div class="mt-6 text-base leading-6 text-gray-700 max-md:max-w-full">
        <p>
            {i18n.bio.intro}
        </p>
        <br>
        <ul class="font-inherit text-inherit pl-[1.312rem] list-disc list-inside">
            {i18n.bio.skills.map(skill => (
            <li>{skill}</li>
            ))}
        </ul>
        <br>
        <p>
            {i18n.bio.techIntro}
        </p>
        <br>
        <ul class="font-inherit text-inherit pl-[1.312rem] list-disc list-inside">
            {i18n.bio.technologies.map(techItem => (
            <li>{techItem}</li>
            ))}
        </ul>
        <br>
        <p>
            {i18n.bio.values}
        </p>
    </div>
</article>
