---
import type { Project } from "@entities/profile";

interface Props {
    project: Project;
    readMoreText: string;
}
const { project, readMoreText } = Astro.props;
---

<!-- Project Item -->
<div class="mt-6 w-full max-md:max-w-full">
    <div
        class="flex flex-wrap gap-4 items-center w-full whitespace-nowrap max-md:max-w-full"
    >
        <img
            src="https://cdn.builder.io/api/v1/image/assets/TEMP/3fcffb75b958a59cc2427cd21de3dd00f1b88dc4?placeholderIfAbsent=true&apiKey=d16caa26bca646eaacef0153851189d4"
            alt={`${project.company} logo`}
            class="object-contain overflow-hidden shrink-0 self-center mx-auto my-0 w-16 aspect-square"
        />
        <div
            class="flex flex-col flex-1 shrink justify-center self-stretch my-auto basis-0 min-w-60 max-md:max-w-full"
        >
            <h3
                class="text-lg font-bold leading-none text-gray-900 text-ellipsis max-md:max-w-full"
            >
                {project.role} {Astro.params.lang === 'fr' ? 'chez' : 'at'} {project.company}
            </h3>
            <p class="text-base text-gray-600 text-ellipsis max-md:max-w-full">
                {project.period}
            </p>
        </div>
    </div>
    <div
        class="flex flex-wrap gap-4 items-center mt-2 w-full max-md:max-w-full project-description"
    >
        <div class="flex shrink-0 self-stretch my-auto w-16 h-10"></div>
        <div
            class="flex-1 shrink self-stretch my-auto basis-0 min-w-60 max-md:max-w-full"
        >
            <p class="text-base text-gray-700 max-md:max-w-full">
                {project.description}
            </p>
            <button
                class="mt-2 text-sm text-indigo-600 max-md:max-w-full read-more"
                aria-expanded="false"
            >
                {readMoreText}
            </button>
        </div>
    </div>
</div>
