---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import UserCard from '../../components/UserCard.astro';
import Bio from '../../components/Bio.astro';
import Footer from '../../components/Footer.astro';
import Projects from './_projects/Projects.astro';
import Certifications from './_certifications/Certifications.astro';
// i18n
import { languages } from '../../utils/paths.js';
import { getContent } from '../../utils/getContent';
export async function getStaticPaths() {
  return languages.map(lang => ({ params: { lang } }));
}
const { lang } = Astro.params;
const content = await getContent(lang);
---
<BaseLayout title={content.title} lang={lang}>
    <main
      class="flex overflow-hidden flex-col px-24 py-16 max-md:px-5 max-sm:-mr-1 max-sm:bg-white max-w-[1088px] mx-auto"
    >
      <LanguageSwitcher lang={lang} />

      <div class="flex flex-wrap gap-4 items-start w-full max-md:max-w-full">
        <UserCard profile={content.profile} />

        <!-- Main Content -->
        <section class="flex-1 shrink basis-8 min-w-60 max-md:max-w-full">
          <Bio bio={content.bio} />

          <Projects projects={content.projects} />

          <Certifications />

          <Footer />
        </section>
      </div>
    </main>
</BaseLayout>