---
import type { Certification } from "@entities/profile";
import { Image } from 'astro:assets';

interface Props {
    certification: Certification;
    index: number;
}

const { certification } = Astro.props;
---

<!-- Certification Item -->
<div
    class=`flex flex-wrap justify-center items-center w-full max-md:max-w-full`
>
    <Image
        src={certification.issuer.imageUrl}
        alt={certification.issuer.label}
        width={64}
        height={64}
        format="webp"
        quality={80}
        class="object-contain overflow-hidden shrink-0 self-stretch my-auto w-16 aspect-square"
    />
    <div
        class="flex flex-col flex-1 shrink justify-center self-stretch px-6 my-auto basis-0 min-w-60 max-md:px-5 max-md:max-w-full"
    >
        <h3
            class="text-lg font-bold text-black truncate max-w-full"
            title={certification.title}
        >{certification.title}</h3>
        <p class="text-base leading-6 text-gray-900 max-sm:text-sm max-sm:leading-5">{certification.issuer.label}</p>
        <p class="text-sm leading-6 text-gray-600 max-sm:text-xs max-sm:leading-5">{certification.issuedDate}</p>
    </div>
</div>
